<style>
  
@media only screen and (max-width:800px) {
      .placeAndSalary2 {
        display: block !important;
      }

      .placeAndSalary1 {
        display: none !important;
      }
    }

</style>
  <div class="card border-primary mb-3">
    <div class="card-body text-primary">
        <div class="row">
          <div class="col-md-9">
          <h5 class="card-title">
            <%= link_to job_detail_url(his.job), :action => 'go' do %>
              <%= his.job.name %>
            <% end %>
          </h5>
            <p style="white-space: pre-line; color: black"><%= raw(his.job.description.to_s.truncate_words(250, separator: ' ', :omission => "... #{link_to '(Read more)', job_detail_url(his.job)}")) %></p>
            <div class="placeAndSalary1 d-flex justify-content-between">
              <span style="text-align: left;" class="card-text">Địa điểm: <%= his.job.city.country %>, <%= link_to search_jobs_in_city_path(his.job.city), :action => 'go' do %><%= his.job.city.name %><% end %><%= his.job.company_district.nil? ? "" : ", " + his.job.company_district %></span>
              <span style="text-align: right; display: block" class="card-text">Mức lương: <%= his.job.salary %></span>
            </div>
            <div class="placeAndSalary2" style="display: none">
              <span class="card-text">Địa điểm: <%= his.job.city.country %>, <%= his.job.city.name %><%= his.job.company_district.nil? ? "" : ", " + his.job.company_district %></span>
              <br>
              <span class="card-text">Mức lương: <%= his.job.salary %></span>
            </div>
              <br>
          </div>
          <% if !current_page? root_path %>
            <div class="col-md-3 align-self-center">
              <div class="d-flex justify-content-center">
                  <%= render "shared/favorite_button", job_id: his.job.id %>
              </div>
          </div>
          <% end %>
      </div>
   </div>
  </div>
